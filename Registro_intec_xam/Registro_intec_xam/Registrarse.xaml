<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Registro_intec_xam.Registrarse"
             Title="Registro">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            
            <Image Source="logointec.jpg"></Image>

            <Entry x:Name="Entry_Name" Placeholder="Name"
                   VerticalOptions="CenterAndExpand" />

            <Entry x:Name="Entry_Email" Placeholder="Email"
                   VerticalOptions="CenterAndExpand" />

            <Entry x:Name="Entry_Password2" IsPassword="True" Placeholder="Password"
                   VerticalOptions="CenterAndExpand" />

            <Entry x:Name="Entry_Passwordconfirm" IsPassword="True" Placeholder="Confirm Password"
                   VerticalOptions="CenterAndExpand" />

            <Button x:Name="Bt_Finalizar" Text="Finalizar" Clicked="Bt_Finalizar_Clicked"
                    VerticalOptions="CenterAndExpand"
                    TextColor="Red"/>
            
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>